package com.construction.entities;

import java.time.LocalDate;

import com.construction.classes.Address;
import com.construction.enums.ProjectStatus;

import jakarta.persistence.Column;
import jakarta.persistence.Embedded;
import jakarta.persistence.Entity;
import jakarta.persistence.EnumType;
import jakarta.persistence.Enumerated;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.JoinColumn;
import jakarta.persistence.Lob;
import jakarta.persistence.ManyToOne;
import jakarta.persistence.OneToOne;
import jakarta.persistence.Table;
import lombok.AllArgsConstructor;
import lombok.Data;
import lombok.Getter;
import lombok.Setter;

@Entity
@Table(name = "project")
@Getter
@Setter
@Data
@AllArgsConstructor
public class Project {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private int projectId;

    @Column(nullable = false, length = 100)
    private String projectName;

    @Embedded
    @Column(nullable = false)
    private Address address;

    @Column(nullable = false)
    private LocalDate startDate;

    @Column(nullable = false)
    private LocalDate endDate;

    @Enumerated(EnumType.STRING)
    @Column(length = 20)
    private ProjectStatus projectStatus;

    @Lob
    @Column(nullable = false)
    private String projectDescription;

    @Column(nullable = false, precision = 15, scale = 2)
    private double totalPrice;

    @ManyToOne
    @JoinColumn(name = "builder_id", referencedColumnName = "builderId")
    private BuilderExtraDetails builder;

    @ManyToOne
    @JoinColumn(name = "customer_id", referencedColumnName = "id")
    private Customer customer;

    @OneToOne
    @JoinColumn(name = "project_detail_id", referencedColumnName = "projectDetailId")
    private ConstructionDetail constructionDetail;

	public Project() {
		super();
		this.setStartDate(LocalDate.now());
		this.setEndDate(LocalDate.now().plusMonths(6));
	}
    
   
}
