# ===============================
# = DATA SOURCE CONFIGURATION
# ===============================
# Set the database connection details
spring.datasource.url=jdbc:mysql://localhost:3306/ConstructionUpdated
spring.datasource.username=root
spring.datasource.password=Ajinkya@18
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# ===============================
# = JPA / HIBERNATE CONFIGURATION
# ===============================
# Show or not log for each SQL query
spring.jpa.show-sql=true

# Hibernate ddl auto (create, create-drop, validate, update)
spring.jpa.hibernate.ddl-auto=update

# Set the dialect to match the database (change to your specific database dialect)
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQLDialect

# ===============================
# = SPRING MVC CONFIGURATION
# ===============================
# Server port
server.port=8080

# Thymeleaf cache (disable for development)
spring.thymeleaf.cache=false

# ===============================
# = LOGGING CONFIGURATION
# ===============================
# Set the logging level
logging.level.org.springframework=INFO
logging.level.com.yourcompany=DEBUG

# ===============================
# = OTHER CONFIGURATIONS
# ===============================
# Application name
spring.application.name=Construction

